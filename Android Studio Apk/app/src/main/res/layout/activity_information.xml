<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="20"
    android:background="#F8EAD5"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <TextView
        android:layout_weight="2"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:padding="10dp"
        android:textSize="20sp"
        android:layout_margin="5dp"
        android:gravity="center"
        android:text="Thông tin cá nhân"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>


    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/img_view_picture_information_activity"
        android:background="#AFADAD"
        android:src="@drawable/ic_person_black_24dp"
        android:layout_gravity="center"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_weight="4"
        android:layout_width="110dp"
        android:padding="5dp"
        android:layout_height="0dp"/>


    <TextView

        android:id="@+id/text_view_name_information_activity"
        android:textSize="18sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="start|center"
        android:text="Your name"
        android:layout_margin="5dp"
        android:layout_weight="1.5"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <TextView

        android:id="@+id/text_view_gender_information_activity"
        android:textSize="18sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="start|center"
        android:text="Gender"
        android:layout_margin="5dp"
        android:layout_weight="1.5"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <TextView

        android:id="@+id/text_view_email_information_activity"
        android:textSize="18sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="start|center"
        android:text="Email"
        android:layout_margin="5dp"
        android:layout_weight="1.5"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <TextView

        android:id="@+id/text_view_phone_information_activity"
        android:textSize="18sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="start|center"
        android:text="Phone"
        android:layout_margin="5dp"
        android:layout_weight="1.5"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <TextView

        android:id="@+id/text_view_address_information_activity"
        android:textSize="18sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="start|center"
        android:text="Address"
        android:layout_margin="5dp"
        android:layout_weight="1.5"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <Button
        android:id="@+id/btn_update_information_activity_information"
        android:layout_marginTop="50dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:text="Cập nhật thông tin cá nhân"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="0dp"/>


</LinearLayout>