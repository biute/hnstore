<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:weightSum="20"
    android:background="#E0CBBD"
    android:padding="10dp"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/img_item_product"
        android:scaleType="fitXY"
        android:layout_weight="5"
        android:layout_width="0dp"
        android:layout_height="120dp"/>
    <LinearLayout
        android:weightSum="12"
        android:padding="5dp"
        android:layout_weight="13"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_view_name_product"
            android:gravity="start|center"
            android:text="Váy cưới"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#E6000000"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"/>

        <TextView
            android:id="@+id/text_view_price_product"
            android:gravity="start|center"
            android:text="1.500$"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="19sp"
            android:textStyle="bold"
            android:textColor="#E6FF0000"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"/>

        <TextView
            android:id="@+id/text_view_mo_ta_product"
            android:gravity="start|center"
            android:text="Váy bạch tuyết"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="17sp"
            android:textColor="#E6000000"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"/>

    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_weight="2"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_view_btn_edit_product"
            android:layout_marginBottom="10dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/ic_edit_black_24dp"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <ImageView
            android:id="@+id/img_view_btn_delete_product"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/ic_delete_black_24dp"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

    </LinearLayout>


</LinearLayout>