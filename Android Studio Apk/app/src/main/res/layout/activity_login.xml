<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#AAD5E2"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="50dp"
        android:text="Đăng Nhập"
        android:textAllCaps="true"
        android:textColor="#E6000000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:inputType="textEmailAddress"
            android:textColor="#640101"
            android:layout_marginBottom="30dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:hint="Email:"
            android:id="@+id/edit_text_email_dialog_dang_nhap_activity"
            android:lineHeight="30sp"
            android:textSize="22sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:inputType="textPassword"
            android:textColor="#640101"
            android:layout_marginBottom="50dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:hint="Password:"
            android:id="@+id/edit_text_password_dialog_dang_nhap_activity"
            android:lineHeight="30sp"
            android:textSize="22sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:paddingTop="20dp"
        android:weightSum="5"
        android:gravity="center|top"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:paddingBottom="20dp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_login_dang_nhap_activity"
            android:textStyle="bold"
            android:background="#E6E23807"
            android:textColor="#fff"
            android:layout_marginRight="5dp"
            android:text="Đăng nhập"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="50dp"/>

        <Button
            android:id="@+id/btn_cancel_dang_nhap_activity"
            android:textStyle="bold"
            android:background="#E60208B1"
            android:textColor="#fff"
            android:layout_marginLeft="5dp"
            android:text="Đăng kí"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="50dp"/>


    </LinearLayout>

</LinearLayout>